{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="d-flex flex-column justify-content-center align-items-center h-100">

        <section class="content-section" style="width: 700px;">
          <div class="row">
            <div class="col-4">
              <div class="profile-pic-container my-3" style="margin-left: 10px">
                <img class="avatar" src="/images/defaultAvatar.gif" alt="You">
              </div>
            </div>

            <div class="col-8 d-flex flex-column justify-content-evenly">
              <div>
                <div class="h2 my-0">ім'я</div>
                <div class="text-secondary">айді</div>
              </div>
              <div class="d-flex">
                <a class="btn btn-outline-success me-2" href="/auth/registration">Редагувати профіль</a>
                <form action="auth/logout" method="post">
                  <button type="submit" class="btn btn-success">Вийти</button>
                </form>
              </div>
            </div>
          </div>
        </section>

        <section class="content-section p-4 my-2" style="width: 700px;">
          <div class="d-flex">
            <a class="btn btn-success me-2" href="/tests/history">Історія тестів</a>
            <a class="btn btn-success" href="/auth/registration">Статистика</a>
          </div>
        </section>
    </section>
  {{/inline}}
{{/layout}}